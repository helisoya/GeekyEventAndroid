<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".vue.DetailStand"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nomStand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom du stand" />

        <TextView
            android:id="@+id/idStand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id di stand" />

        <TextView
            android:id="@+id/descriptionStand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descrition du stad" />

        <TextView
            android:id="@+id/typeStand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id type stand" />

        <Button
            android:id="@+id/buttonPresta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir Prestataire" />

        <Button
            android:id="@+id/buttonDeleteStand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supprimer Stand" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listes commentaires :"
            android:textSize="30sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listeCommentaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editCommentaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Commentaire"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/addCommentaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter" />
        </LinearLayout>


    </LinearLayout>
</layout>